  <!-- Minimal inline JS (for demo) — replace or move to /public/js/app.js -->
  <script>
    // Small helpers and event wiring
    (function(){
      document.getElementById('year').textContent = new Date().getFullYear();

      const textarea = document.getElementById('mainText');
      const charCount = document.getElementById('charCount');
      const detectBtn = document.getElementById('detectBtn');
      const humanizeBtn = document.getElementById('humanizeBtn');
      const summarizeBtn = document.getElementById('summarizeBtn');
      const fileInput = document.getElementById('fileUpload');
      const mainResult = document.getElementById('mainResult');
      const resultBody = document.getElementById('resultBody');
      const resultTitle = document.getElementById('resultTitle');

      function safeFetch(url, options){
        // helper: fetch + timeout + basic error handling
        const controller = new AbortController();
        const t = setTimeout(()=> controller.abort(), 120000); // 2 min timeout
        return fetch(url, Object.assign({}, options, {signal: controller.signal}))
          .then(r => { clearTimeout(t); if(!r.ok) throw new Error('Server error'); return r.json(); });
      }

      // Update char count
      textarea.addEventListener('input', ()=> charCount.textContent = textarea.value.length + ' chars');

      // File upload (basic: only txt auto-read client-side)
      fileInput.addEventListener('change', async (e)=>{
        const f = e.target.files[0];
        if(!f) return;
        if(f.type === 'text/plain'){
          const txt = await f.text();
          textarea.value = txt;
          charCount.textContent = txt.length + ' chars';
        } else {
          alert('For other file types, upload to server via the tool page (server-side parsing).');
        }
      });

      // Generic UI result setter
      function showResult(title, html){
        resultTitle.textContent = title;
        resultBody.innerHTML = html;
        mainResult.style.display = 'block';
      }

      // Tool open (for now shows examples & links to API pages)
      window.openTool = function(toolId){
        // Simple modal-style behavior: call a basic API or show how to use
        if(toolId === 'ai-detector'){
          const text = textarea.value.trim();
          if(!text){ alert('Paste text into the textarea to detect or open the dedicated AI Detector page.'); return; }
          detectBtn.disabled = true; detectBtn.textContent = 'Detecting...';
          // call backend
          safeFetch('/api/detect', {
            method: 'POST',
            headers: {'Content-Type':'application/json'},
            body: JSON.stringify({text})
          }).then(res=>{
            // Expected: { label: 'AI'|'HUMAN', score: 0.72, explanation: '...' }
            const label = res.label || (res.score > 0.5 ? 'AI' : 'HUMAN');
            showResult(label === 'AI' ? 'Likely AI Generated' : 'Likely Human', `
              <div>Score: <strong>${Math.round((res.score||0)*100)}%</strong></div>
              <div style="margin-top:8px;color:rgba(255,255,255,0.82)">${res.explanation || 'Pattern-based detection result.'}</div>
            `);
          }).catch(err=>{
            // Fallback: simulate if server missing
            const fallbackScore = simulateScore(text);
            showResult(fallbackScore > 50 ? 'Likely AI Generated' : 'Likely Human', `<div>Score: <strong>${fallbackScore}%</strong></div><div style="margin-top:8px;color:rgba(255,255,255,0.82)">Simulated result (server not available).</div>`);
          }).finally(()=> { detectBtn.disabled = false; detectBtn.textContent = 'Detect AI' });
        } else {
          // For other tools simply open the dedicated path (tool pages to be implemented server-side)
          window.location.href = '/tools/' + toolId + '.html';
        }
      };

      // Copy share link
      window.copyLink = function(toolId){
        const link = location.origin + '/tools/' + toolId + '.html';
        navigator.clipboard?.writeText(link).then(()=> alert('Tool link copied to clipboard')).catch(()=> alert('Copy failed — manually share: ' + link));
      };

      // Detect button click (same as openTool)
      detectBtn.addEventListener('click', ()=> openTool('ai-detector'));

      // Humanize button
      humanizeBtn.addEventListener('click', async ()=>{
        const text = textarea.value.trim();
        if(!text){ alert('Paste text into the textarea to humanize'); return; }
        humanizeBtn.disabled = true; humanizeBtn.textContent = 'Processing...';
        try{
          const res = await safeFetch('/api/humanize', {
            method:'POST', headers:{'Content-Type':'application/json'}, body: JSON.stringify({text})
          });
          showResult('Humanized Text', `<pre style="white-space:pre-wrap;color:rgba(255,255,255,0.9);">${escapeHtml(res.output || res.humanized || '')}</pre>`);
        }catch(e){
          // fallback
          const fallback = naiveHumanize(text);
          showResult('Humanized Text (simulated)', `<pre style="white-space:pre-wrap;color:rgba(255,255,255,0.9);">${escapeHtml(fallback)}</pre>`);
        }finally{ humanizeBtn.disabled = false; humanizeBtn.textContent = 'Humanize'; }
      });

      // Summarize button
      summarizeBtn.addEventListener('click', async ()=>{
        const text = textarea.value.trim();
        if(!text){ alert('Paste text into the textarea to summarize'); return; }
        summarizeBtn.disabled = true; summarizeBtn.textContent = 'Summarizing...';
        try{
          const res = await safeFetch('/api/summary' , {
            method: 'POST', headers: {'Content-Type':'application/json'}, body: JSON.stringify({text})
          });
          showResult('Summary', `<div style="color:rgba(255,255,255,0.9)">${escapeHtml(res.summary||res.output||'')}</div>`);
        }catch(e){
          // fallback simple summary
          const s = naiveSummary(text);
          showResult('Summary (simulated)', `<div style="color:rgba(255,255,255,0.9)">${escapeHtml(s)}</div>`);
        }finally{ summarizeBtn.disabled = false; summarizeBtn.textContent = 'Summarize' }
      });

      // Simple client-side utility functions (fallbacks)
      function simulateScore(text){
        // naive heuristic: longer and more repetitive -> higher AI score
        const len = text.length;
        const theCount = (text.match(/\bthe\b/gi)||[]).length;
        let score = Math.min(95, Math.round((theCount / Math.max(1,len)) * 3000 + (len>500?30:10)));
        if(len < 80) score = Math.max(5, Math.round(Math.random()*20));
        return score;
      }
      function naiveHumanize(text){
        // Very naive: replace 'utilize'->'use' and similar simple swaps
        return text
          .replace(/\butilize\b/gi,'use')
          .replace(/\butilisation\b/gi,'use')
          .replace(/\bmoreover\b/gi,'also')
          .replace(/\bprior to\b/gi,'before')
          .replace(/\bin order to\b/gi,'to');
      }
      function naiveSummary(text){
        // take first 2 sentences as a quick summary
        const sentences = text.match(/[^.!?]+[.!?]*/g) || [text];
        return sentences.slice(0,2).join(' ').trim();
      }
      function escapeHtml(s){ return (s||'').replace(/[&<>"'\/]/g, function(ch){ return {'&':'&amp;','<':'&lt;','>':'&gt;','"':'&quot;',"'":'&#39;','/':'&#47;'}[ch]; }); }

      // Basic route detection for progressive enhancement (for demo pages)
      if(location.hash && location.hash.startsWith('#tool=')){
        const tool = location.hash.split('=')[1];
        openTool(tool);
      }

      // Expose small functions for dev console
      window.__omnisuite = {simulateScore, naiveSummary, naiveHumanize};
    })();
  </script>

  <!-- NOTE: For production, move scripts & styles to separate files and minify. -->
</body>
</html>


